<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/radio_btn_uncategorized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_baseline_uncategory_off_24"
                android:checked="true"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_btn_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_baseline_person_off_24"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_btn_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_baseline_education_off_24"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_btn_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/ic_baseline_work_off_24"
                android:padding="8dp" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>
</FrameLayout>